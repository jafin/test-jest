{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "./out-tsc",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": false,
    "target": "es2018",
    "types": [
      "@types/jest"
    ]
  },
  "include": [
    "./src"
  ]
}
